@model DapperCrudYtb.Models.Bike

@{
    ViewData["Title"] = "Edit Bike";
}

<h1>Edit Bike</h1>

<form asp-action="Edit" class="form-horizontal">
    <input type="hidden" asp-for="BikeId" />
    <div class="form-group">
        <label asp-for="BName" class="control-label"></label>
        <input asp-for="BName" class="form-control" />
        <span asp-validation-for="BName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manufacture" class="control-label"></label>
        <input asp-for="Manufacture" class="form-control" />
        <span asp-validation-for="Manufacture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CC" class="control-label"></label>
        <input asp-for="CC" class="form-control" />
        <span asp-validation-for="CC" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
