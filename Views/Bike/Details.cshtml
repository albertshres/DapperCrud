@model DapperCrudYtb.Models.Bike

@{
    ViewData["Title"] = "Bike Details";
}

<h1>Bike Details</h1>

<div class="card mt-4">
    <div class="card-header">
        <h4>@Model.BName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Bike ID</dt>
            <dd class="col-sm-9">@Model.BikeId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.BName</dd>

            <dt class="col-sm-3">Manufacturer</dt>
            <dd class="col-sm-9">@Model.Manufacture</dd>

            <dt class="col-sm-3">Color</dt>
            <dd class="col-sm-9">@Model.Color</dd>

            <dt class="col-sm-3">CC</dt>
            <dd class="col-sm-9">@Model.CC</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.BikeId" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.BikeId" class="btn btn-danger">Delete</a>
    </div>
</div>
