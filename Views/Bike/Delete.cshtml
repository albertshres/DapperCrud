@model DapperCrudYtb.Models.Bike

@{
    ViewData["Title"] = "Delete Bike";
}

<h1>Delete Bike</h1>

<div class="alert alert-danger" role="alert">
    <h4>Are you sure you want to delete this bike?</h4>
</div>

<div>
    <p><strong>Name:</strong> @Model.BName</p>
    <p><strong>Manufacturer:</strong> @Model.Manufacture</p>
    <p><strong>Color:</strong> @Model.Color</p>
    <p><strong>CC:</strong> @Model.CC</p>
</div>

<form asp-action="Delete" >
    <input type="hidden" asp-for="BikeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Bike" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
